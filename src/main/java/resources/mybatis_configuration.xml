<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="mybatis.properties"/>
    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis_mappers/basket_mapper.xml"/>
        <mapper resource="mybatis_mappers/discounted_mapper.xml"/>
        <mapper resource="mybatis_mappers/food_product_mapper.xml"/>
        <mapper resource="mybatis_mappers/nonperishable_product_mapper.xml"/>
        <mapper resource="mybatis_mappers/service_mapper.xml"/>
        <mapper resource="mybatis_mappers/user_mapper.xml"/>
    </mappers>
</configuration>